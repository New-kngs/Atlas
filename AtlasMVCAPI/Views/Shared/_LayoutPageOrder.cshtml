@using AtlasDTO;
@{ 
    LoginVO loginInfo = Session["LoginInfo"] as LoginVO;
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Atlas Mattress</title>

    <link rel="shortcut icon" href="#">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/dist/css/adminlte.min.css?v=3.2.0">

</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">

            <!-- Left navbar links -->
            <div class="container">
                <a href="/Home/Index/" class="navbar-brand">
                    <img src="/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">Atlas Mattress</span>
                </a>
                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse order-3" id="navbarCollapse">

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/Product/List" class="nav-link">제품목록</a>
                        </li>
                        <li class="nav-item">
                            <a href="/OrderWeb/History/" class="nav-link">주문내역</a>
                        </li>
                        <!-- 파셜뷰 -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Cart/Basket/">
                                <i class="fa fa-shopping-basket"></i>
                                @Html.Action("Summary", "Cart")
                            </a>
                        </li>

                        <!-- 파셜뷰 -->
                        @if (loginInfo != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    <i class="fa fa-thin fa-phone"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-left">
                                    <span class="dropdown-header">담당자 정보</span>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item">
                                        <i class="fa fa-user-tie"></i> 이름
                                        <!--loginInfo.DeptName.ToString()-->
                                        <!--Session["EmpName"]-->

                                        <span class="float-right text-muted text-sm">@loginInfo.DeptName.ToString() @loginInfo.EmpName.ToString()</span>
                                        
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-phone-volume"></i> 휴대폰 정보
                                        <span class="float-right text-muted text-sm">@loginInfo.EmpPhone.ToString()</span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-envelope mr-2"></i> 이메일
                                        <span class="float-right text-muted text-sm">@loginInfo.EmpEmail.ToString()</span>
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item" data-toggle="dropdown">
                            <i class='fa fa-id-badge'></i>
                        </li>
                        <li class="nav-item">
                            <p>@loginInfo.CustomerName.ToString()</p>
                        </li>
                        <li class="nav-item">
                            @using (Html.BeginForm("Logout", "Login"))
                            {
                                <input type="submit" class="btn btn-secondary" value="LogOut"></input>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="content-wrapper">

            <div class="content-header">

                <div class="container">
                    <div class="row mb-2">

                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div>
        <footer class="main-footer">

            <div class="float-right d-none d-sm-inline">
                제휴 문의 : admin@Atlas.co.kr
            </div>

            <strong>Copyright &copy; 2014-2021 <a>Atlas Mattress</a>.</strong> All rights reserved.
        </footer>
    </div>


    <!-- ./wrapper -->
          <!-- REQUIRED SCRIPTS -->
          <!-- jQuery -->
          <script src="/plugins/jquery/jquery.min.js"></script>
          <!-- Bootstrap 4 -->
          <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
          <!-- AdminLTE App -->
          <script src="/dist/js/adminlte.min.js"></script>

