@model IEnumerable<AtlasDTO.OrderDetailLongVO>

@{
    Layout = null;
}
@using AtlasDTO;
@{
    LoginVO loginInfo = Session["LoginInfo"] as LoginVO;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Atlas | Invoice Print</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        <i class="fa fa-bed"></i> Atlas 주문서
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>@loginInfo.EmpName</strong><br>
                        @loginInfo.DeptName<br>
                        <!-- San Francisco, CA 94107<br> -->
                        Phone: @loginInfo.EmpPhone<br>
                        Email: @loginInfo.EmpEmail
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong>@loginInfo.CustomerName</strong><br>
                        @loginInfo.Address<br>
                        <!-- San Francisco, CA 94107<br> -->
                        Phone: @loginInfo.Phone<br>
                        Email: @loginInfo.Email
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <!--<b>Invoice #007612</b><br>
            <br>-->
                    <b>Order ID: @ViewData["OrderID"]</b><br>
                    <b> 출력일자:</b> @DateTime.Now.Date<br>
                    <!-- <b>Account:</b> 968-34567 -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="table">
                    <!--  -responsive  col-12 -->
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <!-- 제품명, 설명, 규격, 단가, 수량, 합계  -->
                                <th></th>
                                <th>규격</th>
                                <th>제품명</th>
                                <th>수량</th>
                                <th>합계</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.ToList().Count; i++)
                            {
                            <tr>
                                <td>@Model.ToList()[i].Num</td>
                                <td>@Model.ToList()[i].ItemSize</td>
                                <td>@Model.ToList()[i].ItemName</td>
                                <td>@Model.ToList()[i].Qty</td>
                                <td>@Model.ToList()[i].SumQty.ToString("c")</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-8">
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <h3>총 결제금액 : @Model.Sum((p) => p.SumQty).ToString("c")</h3>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Page specific script -->
    <script>window.addEventListener("load", window.print());</script>
</body>
</html>
