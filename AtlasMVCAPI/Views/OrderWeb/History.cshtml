@model IEnumerable<OrderVO>
@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_LayoutPageOrder.cshtml";
}
@using AtlasDTO;

<div class="container text-center">
    <div class="row">
        <!--
        <div class="col-11">
        </div>-->
        <div class="col">
            <!--  -->
            @using (Html.BeginForm("Index", "Home"))
            {
                <input type="hidden" id="rdoCheck" name="rdoCheck" value="" />
                <input type="submit" class="btn btn-primary" value="주문서 출력" style="float: right;" onclick="javascript: ChkOrder();">
            }
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <table class="table">
                <tr>
                    <td></td>
                    <td>주문번호</td>
                    <td>주문일자</td>
                    <td>배송여부</td>
                    <td>배송일자</td>
                    <td>결제금액</td>
                </tr>
                @foreach (OrderVO row in Model)
                {
                    <tr>
                        <td><input type="radio" name="orderNo" value="@row.OrderID"></td>
                        <td>@row.OrderID</td>
                        <td>@row.CreateDate</td>
                        <td>@row.OrderShip</td>
                        <td>@row.OrderEndDate</td>
                        <td>@row.price.ToString("c")</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<!--javascript radio checked value-->
<script>
    function ChkOrder() {
        var rdoString = document.querySelector('input[name="orderNo"]:checked').value;
        document.getElementById('rdoCheck').value = rdoString;
        window.open("/OrderWeb/PurchaseOrder?rdoCheck=" + rdoString, "PopupWin", "width=900,height=600");
    }
    function newWindow() {
        window.open("/OrderWeb/PurchaseOrder", "PopupWin", "width=900,height=600");
    }
</script>
