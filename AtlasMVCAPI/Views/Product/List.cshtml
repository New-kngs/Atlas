@model ProductListViewModel
@using AtlasMVCAPI.Models

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPageOrder.cshtml";
}
<h2>List</h2>
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            @for (int i = 0; i < Model.Products.ToList().Count; i += 2)
